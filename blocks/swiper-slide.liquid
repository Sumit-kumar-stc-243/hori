<div class="swiper-slide" {{ block.shopify_attributes }}>
  <div class="peek-swiper-image">
    {% if block.settings.image != blank %}
      {{ block.settings.image | image_url: width: 1600 | image_tag }}
    {% else %}
      {{ 'image' | placeholder_svg_tag }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Slide",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Slide Image"
    }
  ],
  "presets": [
    {
      "name": "Swiper Slide"
    }
  ]
}
{% endschema %}
